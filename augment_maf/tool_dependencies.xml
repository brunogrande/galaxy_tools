<?xml version="1.0"?>
<tool_dependency>
	<package name="pysam" version="0.7.7">
		<repository name="package_pysam_0_7_7" owner="iuc"/>
	</package>
	<package name="biopython" version="1.65">
		<repository name="package_biopython_1_65" owner="biopython"/>
	</package>
	<package name="mafft" version="7.215">
		<repository name="package_mafft_7_215" owner="marcoalbuquerque"/>
	</package>
	<package name="augment_maf" version="1.0.0">
		<install version="1.0">
			<actions>
				<action type="move_file">
					<source>$REPOSITORY_INSTALL_DIR/augment_maf.py</source>
					<destination>$INSTALL_DIR</destination>
				</action>
				<action type="move_file">
					<source>$REPOSITORY_INSTALL_DIR/bamUtils.py</source>
					<destination>$INSTALL_DIR</destination>
				</action>
				<action type="move_file">
					<source>$REPOSITORY_INSTALL_DIR/mafUtils.py</source>
					<destination>$INSTALL_DIR</destination>
				</action>
				<action type="set_environment">
					<environment_variable action="set_to" name="AUGMENT_MAF_DIR">$INSTALL_DIR</environment_variable>
				</action>
			</actions>
		</install>	
	</package>
</tool_dependency>
