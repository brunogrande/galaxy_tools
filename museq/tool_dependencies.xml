<?xml version="1.0"?>
<tool_dependency>
	<package name="boost" version="1.55.0">
		<repository name="package_boost_1_55" owner="iuc" prior_installation_required="True"/>
	</package>
	<package name="scikit_learn" version="0.14.1">
		<repository name="package_scikit_learn_0_14" owner="iuc" prior_installation_required="True"/>
	</package>
	<package name="ruffus" version="2.4.1">
		<repository name="package_ruffus_2_4_1" owner="marcoalbuquerque" prior_installation_required="True"/>
	</package>
	<package name="museq" version="4.2.1">
		<install version="1.0">
			<actions>
				<action type="download_by_url">ftp://ftp.bcgsc.ca/public/shahlab/MutationSeq/museq_4.3.4.tar</action>
				<action type="set_environment_for_install">
					<repository name="package_boost_1_55" owner="iuc">
						<package name="boost" version="1.55.0"/>
					</repository>
					<repository name="package_scikit_learn_0_14" owner="bgruening">
						<package name="scikit_learn" version="0.14.1"/>
					</repository>
					<repository name="package_ruffus_2_4_1" owner="marcoalbuquerque">
						<package name="ruffus" version="2.4.1"/>
					</repository>
				</action>
				<action type="change_directory">mutationseq/museq/</action>
				<action type="shell_command">make clean</action>
				<action type="shell_command">make -f $REPOSITORY_INSTALL_DIR/Makefile BOOSTPATH=${BOOST_ROOT_DIR}/</action>
				<action type="move_directory_files">
						<source_directory>.</source_directory>
						<destination_directory>$INSTALL_DIR</destination_directory>
				</action>
				<action type="set_environment">
					<environment_variable action="set_to" name="MUSEQ_DIR">$INSTALL_DIR</environment_variable>
				</action>
			</actions>
		</install>
	</package>
</tool_dependency>