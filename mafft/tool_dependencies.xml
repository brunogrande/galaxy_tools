<?xml version="1.0"?>
<tool_dependency>
	<package name="mafft" version="7.215">
		<install version="1.0">
			<actions>
				<action type="download_by_url">http://mafft.cbrc.jp/alignment/software/mafft-7.215-with-extensions-src.tgz</action>
				<action type="change_directory">core</action>
				<action type="shell_command">make -f $REPOSITORY_INSTALL_DIR/Makefile PREFIX=${INSTALL_DIR}/</action>
				<action type="shell_command">make install -f $REPOSITORY_INSTALL_DIR/Makefile PREFIX=${INSTALL_DIR}/</action>
				<action type="set_environment">
					<environment_variable action="prepend_to" name="PATH">$INSTALL_DIR/bin</environment_variable>
				</action>
			</actions>
		</install>
	</package>
</tool_dependency>
