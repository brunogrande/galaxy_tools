<?xml version="1.0"?>
	<tool_dependency>
		<package name="cmake" version="3.1.0">
			<install version="1.0">
				<actions>
					<action type="download_by_url">http://cmake.org/files/v3.1/cmake-3.1.0.tar.gz</action>
					<action type="shell_command">./bootstrap</action>
					<action type="shell_command">make</action>
					<action type="move_directory_files">
						<source_directory>./</source_directory>
						<destination_directory>$INSTALL_DIR</destination_directory>
					</action>
					<action type="set_environment">
						<environment_variable name="CMAKE_ROOT" action="set_to">$INSTALL_DIR</environment_variable>
						<environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin/</environment_variable>
					</action>
				</actions>	
			</install>
		</package>
	</tool_dependency>
