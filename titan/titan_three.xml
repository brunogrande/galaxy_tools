<tool id="titan_three" name="Titan Step Three"/>
	<description>
	</description>
	<requirements>

	</requirements>
	<command>
		<!-- Calculate read counts for a BAM file -->
		$__tool_data_path__/scripts/readCounter -w $w -q $q $bam | python $__titan_dir__/scripts/filter_chromosomes.py > $output;
	</command>
	<inputs>
		<param type="data" format="bam" name="bam" label="BAM Alignment File"/>
		<param type="integer" value="1000" name="w" label="Window"/>
		<param type="integer" value="0" name="q" label="Mapping Quality"/>
	</inputs>
	<outputs>
		<data format="txt" name="output"/>
	</outputs>
</tool>