<tool id="vep2maf" name="vep2maf">
	<description> Converts VEP-annotated VCF file to MAF </description>

	<command interpreter="python">
		vep2maf.py
			--tumor_id $tumor_id
			--normal_id $normal_id
			--input_vep $input_vep
			--output_maf $output_maf
	</command>

	<inputs>
		<param name="tumor_id" type="text" label="Tumor id" />
		<param name="normal_id" type="text" label="Normal id" />
		<param name="input_vep" format="vcf" type="data" label="vcf format data from history" />
	</inputs>

	<outputs>
		<data name="output_maf" format="maf" label="dat file doe" />
	</outputs>

	<requirements>
		<requirement type="package">vep2maf.py</requirement>
		<requirement type="package">samtools</requirement>
		<requirement type="package">bedtools</requirement>
		<requirement type="package">biomart</requirement>
		<requirement type="package">ucsc_tools</requirement>
	</requirements>

	<stdio>
		<exit_code range="0" level="warning" description="Normal" />
		<exit_code range="1" level="fatal" description="Error in one of the subprocesses" />
	</stdio>

	<help>
		Run conversion of vcf to maf on samples.
	</help>
</tool>
