<tool id="mutationSeq3" name="mutationSeq 3.0.1">

    <description>xml points to python wrapper, callmutationSeq3.py, to run classify.py in mutationSeq 3.0.1 on inputs</description>

    <command interpreter="python">
    callmutationSeq3.py 
    -n $normalBam 
    -t $tumourBam 
    --normalBamIndex ${normalBam.metadata.bam_index} 
    --tumourBamIndex ${tumourBam.metadata.bam_index} 
    -r $ref 
    --interval $interval 
    --threshold $threshold 
    -o $output
    </command>

    <inputs> 
                <param format="bam" name="normalBam" type="data" label="Normal BAM file"/>
		<param format="bam" name="tumourBam" type="data" label="Tumour BAM file"/> 
		<param format="fasta" name="ref" type="data" label="Reference Fasta"/>
		<param name="interval" label="Interval" type="text" area="True" size="5x25"/>
		<param name="threshold" type="float" label="Threshold" value="0.5"/>
    </inputs>

    <outputs>
        <data format="vcf" name="output"/>      
    </outputs>
    
    <stdio>
    	<exit_code range="0" level="warning" description="Ignore the Warning, exit code 0, run was a success"/>
    </stdio>
    	

	


	
